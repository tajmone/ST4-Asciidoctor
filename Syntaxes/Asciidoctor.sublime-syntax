  #   comment: |
  #     Examples:
  #       {my-attribute}
  #   name: variable.other
  #   match: ({)([A-Za-z0-9_][A-Za-z0-9_-]*)(})
  #   captures:
  #     '1': {name: constant.character.attributes.reference.begin.asciidoc}
  #     '2': {name: support.variable.attribute.asciidoc}
  #     '3': {name: constant.character.attributes.reference.end.asciidoc}
  # <<<<<<<<<<<<<<<<<<<<<<<<<<<

  ################
  # BIBLIO ANCHORS
  ################
