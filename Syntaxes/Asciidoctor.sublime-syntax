  ####################
  # TYPOGRAPHIC QUOTES
  ####################
  # Added by me to prevent false-positives with monospace...
  # STATUS: UNUSED DRAFT!

  curly_quotes: # NOT USED!
    - match: ("|')(`)
      scope: punctuation.definition.string.begin.asciidoc
    - match: (`)("|')
      scope: punctuation.definition.string.end.asciidoc
