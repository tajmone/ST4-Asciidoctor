  # >>>>>>>>>>>>>>>>>>>>>>>>>>>
  # biblio_anchor:
  #   comment: |
  #     Bibliography anchor
  #
  #     Examples:
  #       [[[Lorem ipsum]]]
  #   name: storage.type.reference.biblioanchor.asciidoc
  #   match: (?<!\[)(\[\[\[).*?(\]\]\])(?!\])
  #   captures:
  #     '1': {name: punctuation.definition.biblioanchor.begin.asciidoc}
  #     '2': {name: punctuation.definition.biblioanchor.end.asciidoc}
